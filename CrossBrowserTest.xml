<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="CrossBrowserTest Test Suite">

    <test verbose="2" preserve-order="true" name="Chrome CrossBrowserTest">
        <classes>
            <class name="tests.C10_CrossBrowserTest"> </class>
        </classes>
    </test>

    <test verbose="2" preserve-order="true" name="Edge CrossBrowserTest">
        <parameter name="browser" value="Edge"> </parameter>
        <classes>
            <class name="tests.C10_CrossBrowserTest"> </class>
        </classes>
    </test>

    <test verbose="2" preserve-order="true" name="Firefox CrossBrowserTest">
        <parameter name="browser" value="Firefox"> </parameter>
        <classes>
            <class name="tests.C10_CrossBrowserTest"> </class>
        </classes>
    </test>

</suite>